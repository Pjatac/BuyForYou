@model DAL.Models.Product
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Main
	{

	@using (Ajax.BeginForm("AddToCart", "Cart", new { }, new AjaxOptions
	{
		HttpMethod = "POST",
		InsertionMode = InsertionMode.Replace,
		UpdateTargetId = "centre",
	}))
	{
		@Html.Raw("<img style='width:200px; height:200px;' src=\"data:image/png;base64," + Convert.ToBase64String(Model.Picture1) + "\" />")
		@Html.Raw("<img style='width:200px; height:200px;' src=\"data:image/png;base64," + Convert.ToBase64String(Model.Picture2) + "\" />")
		@Html.Raw("<img style='width:200px; height:200px;' src=\"data:image/png;base64," + Convert.ToBase64String(Model.Picture3) + "\" />")
		<div class="col-xs-12">
			<div class="col-xs-6">
				<h3>Date card: </h3>
				@Model.DateCard
				<br>
				<h3>Title:</h3>
				@Model.Title
				<br>
				<h3>Short description: </h3>
				@Model.ShortDescription
				<br>
			</div>
			<div class="col-xs-6">
				<h2>Long description:</h2>
				@Model.LongDescription
				<br>
			</div>
			<input type="submit" class="btn btn-success" value="Add to cart" />
			<input type="button" value="Return" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Home")'" />
		</div>
	}
}
